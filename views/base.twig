                    {{sidebar}}
                </aside>
            {% endif %}
        </section>

        {% block footer %}
            {% include 'footer.twig' %}
            {{ function('wp_footer') }}
        {% endblock %}
        {% block footer_scripts %}
            <script src="{{site.theme.path}}/components/jquery/jquery.js"></script>
            <script src="{{site.theme.path}}/static/js/site.js"></script>
        {% endblock %}
        <script src="{{site.theme.path}}/static/js/site.js"></script>
